<div class="container">
    <div class="row">

        <%# ジャケ写 %>
        <div class="col-xs-6">
            <div class="image-box">
                <%= attachment_image_tag @item, :image, :fill, 200, 200, fallback: "no_image.jpg", :size=>"200x200", class: "images" %>
            </div>
        </div>

        <%# 商品詳細情報 %>
        <div class="col-xs-6">
            <div class="item-info">
                <div class="title">
                    <%# 商品名 %>
                    <h2><%= @item.album %></h2>
                    <%# アーティスト名 %>
                    <p><%= @item.artist.name %></p>
                    <%# 在庫ステータス %>
                    <p><%= stock_check(@item) %></p>
                    <%# いいねカウント %>
                    <%# @itemsをrenderのcollectionでそれぞれを取り出してitemとして渡す %>
                    <%= render 'likes/like_links', item: @item %>
                    <%# 価格 %>
                    <p>¥<%= @item.price %>(税込)</p>
                </div>
            </div>
        </div>

    </div><%# rowクラス閉じタグ %>



    <div class="row">

        <%# 収録曲 %>
        <div class="col-xs-6">
            <div class="item-song">
                <table><h4><strong>収録曲</strong></h4>
                <% @discs.each do |disc| %>
                    <% disc.songs.each do |song|%>
                        <tr>
                            <td>
                                <%= song.position %>
                            </td>
                            <td>
                                <%= song.name %>
                            </td>
                            <td>
                                <%= song.artist.name %>
                            </td>
                        </tr>
                    <% end %>
                <% end %>
                </table>
            </div>
        </div>

        <%# レビュー %>
        <div class="col-xs-6">
            <%# レビュー内容表示 %>
            <div class="item-rev">
                <table>
                    <% @reviews.each do |reviews| %>
                    <tr>
                        <td>
                            <h4><strong>レビュー</strong></h4>
                            <p>投稿者：
                                <%= reviews.name %>
                            </p>
                            <p>投稿日時：
                                <%# ヘルパーメソッド使用 %>
                                <%= simple_date(reviews.created_at) %>
                            </p>
                            <%# 投稿コメント %>
                            <p>
                                <%= reviews.comment %>
                            </p>
                        </td>
                    </tr>
                    <% end %>
                </table>
            </div>

            <%# レビュー投稿 %>
            <div class="item-rev-edit">
                <h4><strong>レビューする</strong></h4>
                <%= form_for(@review) do |review| %>
                    <p>名前</p>
                    <%= review.text_field :name %>
                    <p>レビュー</p>
                    <%= review.text_area :comment %>
                    <p></p>
                    <%# hidden_fieldで情報を渡す %>
                    <%= review.hidden_field :item_id, :value => @item.id %>
                    <%= review.submit("レビューを投稿する",class: 'btn btn-primary') %>
                <% end %>
            </div>


        </div>






    </div><%# rowクラス閉じタグ %>







</div><%# containerクラス閉じタグ %>








</div>
