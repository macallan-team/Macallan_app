<% if @results.any? %>
    <div class="container">
<%# 商品詳細ページ遷移リンク %>

        <div class="row">
        <%# 検索対象一覧 %>
            <% @results.each do |results| %>
            <%= link_to (item_path(results)) do %>
            <!-- ジャケット写真 -->
            <div class="col-xs-4 item-box">
                <div class="image-box">
                    <%= attachment_image_tag results, :image, :fill, 200, 200, fallback: "no_image.jpg", :size=>"200x200", class: "images" %>
                </div>
                <%# 商品名 %>
                <p><%= results.album %></p>
                <%# アーティスト名 %>
                <p><%= results.artist.name %></p>
                <%# 価格 %>
                <p>¥<%= results.price %>(税込)</p>
                <%# 販売ステータス %>
                <p><%= stock_check(results) %></p>
            </div>
            <% end %><%# リンク %>
            <% end %><%# resultsのEND %>
        </div>

    </div>
<% end %>




