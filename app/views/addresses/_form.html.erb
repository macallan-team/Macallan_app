<div class="box-radius">
    <%= form_with model: @address,url: end_user_addresses_path, local: true do |f| %>
    <div class="form-box">
        <label>氏名</label>
        <%= f.text_field :name, class:"form-control", placeholder: "全角2〜20文字"%>
    </div>
    <div class="form-box">
        <label>電話番号</label>
        <%= f.text_field :phone_number, class:"form-control",placeholder: "半角数字7桁（ハイフンは不要です）" %>
    </div>
    <div class="form-box">
        <label>郵便番号</label>
        <%= f.text_field :postal_code, class:"form-control", placeholder: "ハイフンは不要です" %>
    </div>
    <div class="form-box">
        <label>住所</label>
        <%= f.text_area :address, class:"form-control", placeholder: "全角80文字以内" %>
    </div>
    <div class="text-center">
        <%= link_to "戻る", new_end_user_order_path(current_end_user),method: :get,class:"btn btn-default" %>
        <%= f.submit "登録", class:"btn btn-default", :data => {:disable_with => "登録"}%>
    </div>
    <% end %>
</div>