<div class="container">
    <h2>アドレス追加</h2>
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <% @addresses.each do |address| %>
            <%= link_to edit_address_path do %>
                <table style="width:100%;">
                    <tbody>
                        <tr><td>配送先名</td>
                        <td><%= address.name %></td><tr>
                        
                        <tr><td>住所</td>
                        <td><%= address.address %></td></tr>

                        <tr><td>郵便番号</td>
                        <td><%= address.postal_code %></td></tr>

                        <tr><td>電話番号</td>
                        <td><%= address.phone_number %></td></tr>
                    </tbody>
                </table>
            <% end %>
            <% end %>
        </div>
    </div>
</div>