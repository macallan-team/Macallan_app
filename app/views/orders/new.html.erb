<div class = "container">
  <div class = "row">
    <div class = "col-xs-10 col-xs-offset-1">
      <h2>発送先・お支払い方法</h2>
        <%= form_with model: [current_end_user,@order],url: confirm_end_user_order_path, local: true do |f| %>
        <label style="display:block;">
          <table class="table table-responsive table-bordered">
            <tbody>
              <tr><td rowspan="4" style="vertical-align:middle;"><%= f.radio_button :use_address, 'mine' %></td>
              <th>配送先氏名</th><td><%= current_end_user.last_name %>　<%= current_end_user.first_name %></td></tr>
              <tr><th>電話番号</th><td><%= current_end_user.phone_number %></td></tr>
              <tr><th>郵便番号</th><td><%= postal_hyphen(current_end_user.postal_code) %></td></tr>
              <tr><th>住所</th><td><%= current_end_user.address %></td></tr>
            </tbody>
          </table>
          </label>

          <% if @addresses.any? %>
          <% @addresses.each do |address| %>
          <label>
          <%= f.radio_button :use_address, address.id %>
          <table class="table">
            <tbody>
              <tr><th>配送先氏名</th><td><%= address.name %></td></tr>
              <tr><th>電話番号</th><td><%= address.phone_number %></td></tr>
              <tr><th>郵便番号</th><td><%= address.postal_code %></td></tr>
              <tr><th>住所</th><td><%= address.address %></td></tr>
            </tbody>
          </table>
          </label>
          <% end %>
          <% end %>
          <div class="text-center">
          <p><%= link_to "配送先を追加する", new_end_user_address_path %></p>
        
        <%= f.submit "確認画面へ進む", class:"btn btn-default"%>
        </div>
        <% end %>
    </div>
  </div>
</div>