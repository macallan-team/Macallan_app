<header class="container-fluid">
    <div class="row">
        <div class="col-xs-4 head-left"></div>
        <div class="col-xs-4 head-center">
            <%= link_to root_path, class: "header-link" do %>
            <h1>Macallan</h1><% end %>
        </div>
        <div class="col-xs-4 head-right head-menu">
        <%# ハンバーガーメニュー機能 %>

            <%= link_to cart_items_path do %>
            <div class="menu pull-right">
                <div id="humburger-icon">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
            <% end %>
        <%# ログイン機能 %>
            <div class="login-status pull-right">
                <% if end_user_signed_in? %>
                <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete %>
                <% else %>
                <%= link_to "ログイン", new_end_user_session_path %>
                <%= link_to "新規登録", new_end_user_registration_path %>
                <% end %>
            </div>
        </div>
    </div>
    <% if admin_signed_in?%>
    <%# adminならヘッダーの検索を非表示に %>
    <% else %>
    <div class="row">
        <div class="col-xs-1 col-sm-4"></div>
        <div class="col-xs-10 col-sm-4 head-center">
        <%# 検索フォーム機能 %>
            <div class="search-box">
            <%= search_form_for @search, url: items_path do |f| %>
            <div class="search-btn">
                <%= f.submit '検索' %>
            </div>
            <div class="search-form">
                <%= f.search_field :album_or_discs_songs_artist_name_or_label_name_or_category_name_cont, placeholder: "CD アーティスト名 曲名" %>
            </div>
            <% end %>
        </div>
        <div class="col-xs-1 col-sm-4"></div>
    </div>
    <% end %>
</header>
