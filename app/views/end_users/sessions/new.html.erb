<body class="login-body">
  <div class="container-sign-up center-block">
    <div class="row">
      <div class="col-md-3 col-md-offset-4">
        <section>
          <h2 class="form-headter-title">ログイン</h2>

            <div class="form-body">

              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group has-icon">
                  <%= f.label :メールアドレス %><br />
                  <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email" %>
                </div>

                <div class="form-group has-icon">
                  <%= f.label :パスワード %><br />
                  <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :次回より入力を省略 %>
                  </div>
                <% end %>

                <div class="actions">
                  <%= f.submit "ログイン", class:"btn btn-lg btn-primary btn-block btn-base-1 mt-20" %>
                </div>
              <% end %>

              <%= render "end_users/shared/links" %>

          </div>
        </section>
      </div>
    </div>
  </div>
</body>
