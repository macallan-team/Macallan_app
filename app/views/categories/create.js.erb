$('#category-form').val("");
$('.category > option').remove();
<% Category.all.order('name').each do |category| %>
$('.category').append($('<option>').html("<%= category.name %>").val("<%= category.id %>"));
<% end%>
$('#messages').html('<%= escape_javascript(render("layouts/flash")) %>');
<%= render 'layouts/alert'%>