<div class="container">
    <div class="row">
    <!-- sidebar  ここから -->
        <div class="col-sm-3">
        <%= render "layouts/adminsidebar" %>
            <div class="side-box">
                <%= render "search" %>
            </div>
        </div>
    <!-- sidebar  ここまで -->

        <div class="col-xs-9">
            <h2>注文管理</h2>
            <div class="box">
                <div class="row">
                    <div class="col-xs-12">
                        <table class="table table-striped table-responsive">
                            <thead>
                                <tr>
                                    <th>注文日</th>
                                    <th>注文者</th>
                                    <th>発送先</th>
                                    <th>注文内容</th>
                                    <th>ステータス</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            <% @orders.each do |order| %>
                                <tr>
                                    <td><%= order.purchased_at.strftime("%Y年%m月%d日") %></td>
                                    <td>
                                        <%= order.shipping_name %>
                                    </td>
                                    <td><%= order.shipping_address %></td>
                                    <td>
                                        <% order.order_items.each do |i| %>
                                        <p>アルバム名：<%= i.item.album %></p>
                                        <p>アーティスト名：<%= i.item.artist.name %></p>
                                        <p>数量：<%= i.count %></p>
                                        <% end %>
                                    </td>
                                    <td>
                                        <% if order.shipping_status == "accepting" %>
                                        受付
                                        <% elsif order.shipping_status == "backordered" %>
                                        入荷待ち
                                        <% else %>
                                        出荷済
                                        <% end %>
                                    </td>
                                    <td><%# 編集ボタン %>
                                        <%= link_to "編集",edit_manage_order_path(order),class:"btn btn-default" %>
                                    </td>
                                </tr>
                            <% end %>
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>
        </div>






    </div><!-- row -->
</div><!-- container -->
