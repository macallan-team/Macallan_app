<div class="container">
    <div class="row">
    
<!-- sidebar  ここから -->
    <div class="col-sm-3">
      <%= render "layouts/adminsidebar" %>
      <div class="side-box">
        <%= render "search" %>
      </div>
    </div>
<!-- sidebar  ここまで -->
<% if @results.any? %>
      <div class="col-sm-9">
        <h2>ユーザー一覧</h2>
        <table class="table table-striped table-responsive">
          <thead>
            <tr>
              <th><strong>ユーザー名</strong></th>
              <th><strong>電話番号</strong></th>
              <th><strong>住所</strong></th>
              <th></th>

            </tr>
          </thead>
          <tbody>
          <% if @param_q == 1 %>
            <% @end_user.each do |f| %>
              <tr>
                <td><%= f.last_name %> <%= f.first_name %></td>
                <td><%= f.phone_number %></td>
                <td><%= f.address.truncate(25) %></td>
                <td><%= link_to "詳細", manage_end_user_path(f.id), class: "btn btn-primary"%></td>
              </tr>
            <% end %>
          <% else %>
            <% @results.each do |f| %>
              <tr>
                <td><%= f.last_name %> <%= f.first_name %></td>
                <td><%= f.phone_number %></td>
                <td><%= f.address.truncate(25) %></td>
                <td><%= link_to "詳細", manage_end_user_path(f.id), class: "btn btn-primary"%></td>
              </tr>
            <% end %>
          <% end %>
          </tbody>
        </table>
      </div>
      <% else %>
         <p><%= "該当の検索結果はありませんでした。" %></p>
      <% end %>
    </div>
</div>
