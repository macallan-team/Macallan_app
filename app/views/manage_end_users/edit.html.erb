  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
          <h2>ユーザー情報編集ページ</h2>
            <%= form_for @end_user, url: manage_end_user_path do |f| %>
              <div class="box">

                <div class="row form-group name-form">
                  <div class="item"><%= f.label :氏名 %></div>
                  <div class="col-md-10 form name-form"><%= f.text_field :last_name, :size=>"25", autofocus: true, class:"form-inline", placeholder:"姓" %>
                  <%= f.text_field :first_name, :size=>"25", autofocus: true, class:"form-inline", placeholder:"名"%></div>
                </div>

                <div class="row form-group">
                  <div class="item"><%= f.label :氏名%><em>(カナ)</em></div>
                  <div class="col-md-10"><%= f.text_field :last_kana, :size=>"25", autofocus: true, class:"form-inline", placeholder:"セイ" %>
                  <%= f.text_field :first_kana, :size=>"25", autofocus: true, class:"form-inline", placeholder:"メイ"%></div>
                </div>

                <div class="row form-group">
                  <div class="item"><%= f.label :郵便番号 %></div>
                  <div class="col-md-10"><%= f.text_field :postal_code, autofocus: true, class:"form-control", placeholder:"ハイフンなし" %></div>
                </div>

                <div class="row form-group">
                  <div class="item"><%= f.label :住所 %></div>
                  <div class="col-md-10"><%= f.text_field :address, autofocus: true, class:"form-control" %></div>
                </div>

                <div class="row form-group">
                  <div class="item"><%= f.label :電話番号 %></div>
                  <div class="col-md-10"><%= f.text_field :phone_number, autofocus: true, class:"form-control", placeholder:"ハイフンなし" %></div>
                </div>

                <div class="row form-group">
                  <div class="item"><%= f.label :メールアドレス %></div>
                  <div class="col-md-10"><%= f.email_field :email, class:"form-control" %></div>
                </div>

                <div class="text-center">
                  <%= f.submit "更新する", class:"btn btn-primary btn-block" %>
                </div>
              <% end %>

              <div class="link"><%= link_to "戻る", manage_end_user_path(@end_user.id) %></div>

            </div>
      </div>
    </div>
  </div>
