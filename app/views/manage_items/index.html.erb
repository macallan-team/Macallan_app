<div class="container">
  <div class="row">
<!-- sidebar  ここから -->
    <div class="col-sm-3">
    <%= render "layouts/adminsidebar" %>
      <div class="side-box">
        <%= render "search" %>
      </div>
    </div>
<!-- sidebar  ここまで -->

    <div class="col-sm-9">
      <h2>商品一覧</h2>
      <div class="box">
        <div class="row"><div class="col-xs-12">
            <table style="width:100%; margin-bottom:-10px;">
                <tbody>
                 <tr><th class="col-xs-3">商品名</th>
                    <th class="col-xs-2">値段</th>
                    <th class="col-xs-2">在庫</th>
                    <th class="col-xs-3">アーティスト</th>
                    <th class="col-xs-2">ステータス</th>
                </tr>

<% if @results.any? %>

 <% @results.each do |item| %>
                <tr class="touch">
                    <td class="col-xs-3">
                    <%= link_to  manage_item_path(item) do %>
                    <%= item.album %>
                    <% end %>
                    </td>
                    <td class="col-xs-2">¥<%= item.price %></td>
                    <td class="col-xs-2"><%= item.stock %></td>
                    <td class="col-xs-3"><%= check_null(item.artist.name) %></td>
                    <td class="col-xs-2"><%= sales_status(item) %></td>
                </tr>
 <% end %>
<% end %>

        <tr><td colspan="5" style="text-align:center;">
        <%= paginate @results %></td></tr>
                    </tbody>
                </table>
            </div>
        </div>
      </div>
    </div><!-- col-sm-9 -->

  </div><!-- row -->
</div><!-- container -->