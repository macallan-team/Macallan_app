<h3>関連項目の編集</h3>
<div class="form-box">
<%= form_for(Category.new) do |f| %>
    <label>ジャンル</label><br>
    <%= f.text_field :name, :style => "width:67%;", class: "form-control pull-left", placeholder: "ジャンル名" %>
    <%= f.submit "追加", :style => "width:33%;", class: "btn btn-default" %>
<% end %>
</div>
    
