<div class="col-sm-9">
      <h2>商品詳細</h2>
      <div class="box deleted">
        <div class="row">
            <div class="col-sm-12">
                <table class="table table-responsive">
                    <tbody>
                        <tr><th>ID</th>
                        <td><%= @item.id %><%= link_to "[ 元に戻す ]", restore_manage_item_path, method: :get, class:"pull-right", data: { confirm: "ステータスを「削除済み」から「販売停止中」に変更します。" } %></td></tr>

                        <tr><th>商品名</th>
                        <td><%= @item.album %></td></tr>

                        <tr><th>ジャケット画像</th>
                        <td><%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td></tr>
                        
                        <tr><th>ジャンル</th>
                        <td><%= @item.category.name %></td></tr>
                        
                        <tr><th>レーベル</th>
                        <td><%= @item.label.name %></td></tr>

                        <tr><th>アーティスト</th>
                        <td><%= @item.artist.name %></td></tr>
                        
                        <tr><th>在庫数</th>
                        <td><%= @item.stock %></td></tr>

                        <tr><th>ステータス</th>
                        <td><%= sales_status(@item) %></td></tr>

                        <tr><th>発売日</th>
                        <td><%= simple_date(@item.release_date) %></td></tr>

                        <tr><th>登録日</th>
                        <td><%= simple_date(@item.created_at) %></td></tr>

                        <tr><th>収録内容</th>
                        <td>
                <% @item.discs.each do |disc| %>
                <table class="table" style="background-color:rgba(0,0,0,0);">
                        <thead><tr><th colspan="3">ディスク</th></tr>
                        <tbody>
                        <tr><td>No.</td>
                        <td>曲名</td>
                        <td>アーティスト</td>
                        <td></td></tr></thead>
                <% disc.songs.each do |song| %>
                        <tr><td><%= song.position %></td>
                        <td><%=  song.name %></td>
                        <td><%= song.artist.name %></td>
                        </tr>
                <% end %>
                   </tbody>
                </table>
                <% end %>
                </td>
                </tbody>
              </table>
            </div>
        </div>
      </div>
    </div><!-- col-sm-9 -->
