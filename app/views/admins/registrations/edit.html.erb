<body class="profile-body">
  <div class="container-sign-up center-block">
    <div class="row">
      <div class="col-md-3 col-md-offset-4">
        <section>
          <h2>編集ページ</h2>
            <%= form_for @end_user do |f| %>
              <%= render 'end_users/shared/error_messages' %>
              <div class="form-body">
                <div class="form-group has-icon">
                  <label class="control-lebel sr-only" for = "inputName">LastName</label>
                  <%= f.label :氏名 %><br>
                  <%= f.text_field :last_name, autofocus: true, class:"form-inline", id:"inputName",placeholder:"姓" %>

                  <label class="control-lebel sr-only" for = "inputName">FirstName</label>
                  <%= f.text_field :first_name, autofocus: true, class:"form-inline", id:"inputName",placeholder:"名"%>
                </div>

                <div class="form-group has-icon">
                  <label class="control-lebel sr-only" for = "inputName">LastKana</label>
                  <%= f.label :氏名%><em>(カナ)</em><br>
                  <%= f.text_field :last_kana, autofocus: true, class:"form-inline", id:"inputName",placeholder:"セイ" %>

                  <label class="control-lebel sr-only" for = "inputName">FirstKana</label>
                  <%= f.text_field :first_kana, autofocus: true, class:"form-inline", id:"inputName",placeholder:"メイ"%>
                </div>

                <div class="form-group has-icon">
                  <%= f.label :郵便番号 %>
                  <%= f.text_field :postal_code, autofocus: true, class:"form-control", id:"inputPostalCode", placeholder:"ハイフンなし" %>
                </div>

                <div class="form-group has-icon">
                  <%= f.label :住所 %>
                  <%= f.text_field :address, autofocus: true, class:"form-control", id:"inputAddress" %>
                </div>

                <div class="form-group has-icon">
                  <%= f.label :電話番号 %>
                  <%= f.text_field :phone_number, autofocus: true, class:"form-control", id:"inputPhoneNumber", placeholder:"ハイフンなし" %>
                </div>

                <div class="form-group has-icon">
                  <%= f.label :メールアドレス %>
                  <%= f.email_field :email, class:"form-control", id:"inputEmail" %>
                </div>

                <div class="form-group has-icon">
                  <%= f.label :新しいパスワード %> <i>(変更しない場合は空欄のまま)</i><br />
                  <%= f.password_field :password, class:"form-control", autocomplete: "new-password", placeholder:"英数字6文字以上" %>
                  <% if @minimum_password_length %>
                    <br />
                    <em><%= @minimum_password_length %> characters minimum</em>
                  <% end %>
                </div>

                <div class="form-group has-icon">
                  <%= f.label :新しいパスワードの再確認用 %><br />
                  <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password", placeholder:"英数字6文字以上" %>
                </div>

                <div class="form-group has-icon">
                  <%= f.label :現在のパスワード %> <i>(変更をするには現在のパスワードが必要)</i><br />
                  <%= f.password_field :current_password, class:"form-control", autocomplete: "current-password", placeholder:"英数字6文字以上" %>
                </div>

                <div class="actions">
                  <%= f.submit "更新する", class:"btn btn-lg btn-primary btn-block btn-base-1 mt-20" %>
                </div>
              <% end %>

              <h3>ユーザー削除</h3>

              <%= button_to "ユーザーを削除する", end_user_registration_path(resource_name), data: { confirm: "本当によろしいですか?" }, method: :delete, class:"btn btn-sm btn-danger btn-base-1 mt-20" %>

              <%= link_to "戻る", :back %>

            </div>
        </section>
      </div>
    </div>

  </div>
</body>






